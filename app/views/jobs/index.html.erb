

<h1 class="jobs-title">Listing jobs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Document</th>
      <th>Copies</th>
      <th>Status</th>
      <% unless @current_user.printers.empty? %>
        <th colspan="1"></th>
        <% end %>
      </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.document %></td>
        <td><%= job.copies %></td>
        <td><%= job.status %></td>
        <% unless @current_user.printers.empty? %>
          <td>
          <div class="print_job">
            <%= link_to 'Accept', edit_job_path(job), :class => "btn btn-primary" %>
          </div>
          <div id=<%= job.id %> class='print_job_accepted'>
            <%= render :partial => 'edit_form', :locals => { :job => job } %>
          </div>

          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>