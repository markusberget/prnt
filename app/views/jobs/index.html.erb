<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>Copies</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.document %></td>
        <td><%= job.copies %></td>
        <td><%= job.status %></td>
        <td><%= link_to 'Accept', edit_job_path(job) %></td>
      </tr>
    <% end %>
  </tbody>
</table>