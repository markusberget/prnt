<h1>Listing jobs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Document</th>
      <th>Copies</th>
      <th>Status</th>
      <% unless @current_user.printers.empty? %>
        <th colspan="1"></th>
        <% end %>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.document %></td>
        <td><%= job.copies %></td>
        <td><%= job.status %></td>
        <% unless @current_user.printers.empty? %>
          <td><%= link_to 'Accept', edit_job_path(job) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>